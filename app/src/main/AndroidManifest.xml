<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.college.certificategenerator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity android:name=".UploadSheetActivity"/>
        <activity android:name=".EnterDetails"/>
        <activity android:name=".LandingPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ChooseTemplates"/>
        <activity android:name=".ShowScannedText"/>
        <activity android:name=".ScanPhotosActivity"/>
        <activity android:name=".CapturePhotoActivity"/>
        <activity android:name=".MainActivity"/>
        <activity android:name=".ChooseTemps"/>

    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

</manifest>